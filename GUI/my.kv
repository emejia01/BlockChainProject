<WelcomeWindow>:
    name: "welcome"

    canvas.before:
        Color:
            rgba:(24/255,24/255,35/255,1)
        Rectangle:
            pos: self.pos
            size: self.size


    FloatLayout:
        Image:
            source: 'voterchain.png'
            size: self.texture_size
            pos_hint:{"x": 0.3, "top":.95}
            size_hint:0.4, 0.4


        RoundedButton:
            id: voterLogin
            pos_hint:{"x": 0.3, "top":.45}
            size_hint:0.4, 0.1
            text: "Voter Login"
            on_release:
                root.manager.transition.direction = "left"
                root.segueVoterLogin()


        RoundedButton:
            id: createAccnt
            pos_hint:{"x": 0.3, "top":.3}
            size_hint:0.4, 0.1
            text: "Create Account"
            on_release:
                root.manager.transition.direction = "left"
                root.segueCreateAccnt()

        RoundedButton:
            id: goVisual
            pos_hint:{"x": 0.3, "top":.15}
            size_hint:0.4, 0.1
            text: "Visualizer"
            on_release:
                root.manager.transition.direction = "left"
                root.segueVisualizer()




<CreateVoterAccountWindow>:
    name: "createVoter"

    canvas.before:
        Color:
            rgba:(24/255,24/255,35/255,1)
        Rectangle:
            pos: self.pos
            size: self.size

    namee: namee
    email: email
    password: password

    FloatLayout:


        Button:
            id: back
            background_color: 1,1,1,.1
            background_normal: 'back.png'
            pos_hint:{"x": 0.025, "top":.925}
            size_hint:0.075, 0.075
            on_release:
                root.manager.transition.direction = "left"
                root.segueBack()


        Image:
            source: 'voterchainWords.png'
            size: self.texture_size
            pos_hint:{"x": 0.3, "top":.95}
            size_hint:0.4, 0.1

        Label:
            id: welcome
            pos_hint:{"x": 0.1, "top":0.85}
            size_hint:0.8, 0.1
            text: "Create Account"


        NiceText:
            id: namee
            hint_text: "Name"
            multiline: False
            pos_hint: {"x": 0.3, "top":0.65}
            size_hint: 0.4, 0.05

        NiceText:
            id: email
            hint_text: "Email"
            multiline: False
            pos_hint: {"x": 0.3 , "top":0.55}
            size_hint: 0.4, 0.05

        NiceText:
            id: password
            hint_text: "Password"
            multiline: False
            password: True
            pos_hint: {"x": 0.3, "top":0.45}
            size_hint: 0.4, 0.05

        RoundedButton:
            pos_hint:{"x":0.3,"y":0.05}
            size_hint: 0.4, 0.1
            text: "Become a Voter"
            on_release:
                root.manager.transition.direction = "up"
                root.submitVoter()




<VoterLoginWindow>:
