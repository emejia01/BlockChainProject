            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()




<MainWindow>:
    id: "mainW"
    name: "main"

    bal: bal
    dropdown: dropdown


    canvas.before:
        Color:
            rgba:(24/255,24/255,35/255,1)
        Rectangle:
            pos: self.pos
            size: self.size



    FloatLayout:
        Button:
            id: back
            background_color: 1,1,1,.1
            background_normal: 'back.png'
            pos_hint:{"x": 0.025, "top":.925}
            size_hint:0.075, 0.075
            on_release:
                root.manager.transition.direction = "right"
                root.segueBack()
        Image:
            source: 'voterchainWords.png'
            size: self.texture_size
            pos_hint:{"x": 0.3, "top":.95}
            size_hint:0.4, 0.05

        Label:
            id: bal
            text: ''
            font_size: self.height
            pos_hint:{"x":0.375,"y":0.65}
            size_hint: 0.15, 0.175
            color: (112/255,52/255,121/255,1)
            font_name: "Arial"

        Label:
            id: title
            text: "Bitcoin \n vs.\n Ethereum"
            halign: 'center'
            valign: 'middle'
            font_size: 28
            pos_hint:{"x":0.4,"y":0.35}
            size_hint: 0.2, 0.175
            color: (1,1,1,1)
            font_name: "Arial"


        Image:
            source: 'vc.png'
            size: self.texture_size
            pos_hint:{"x":0.40,"y":0.67}
            size_hint: 0.3, 0.12
            allow_stretch: True



        Image:
            source: 'bitcoin.png'
            pos_hint:{"x":0.2,"y":0.35}
            size_hint: 0.15, 0.15
            allow_stretch: True



        Image:
            source: 'ethereum.png'
            pos_hint:{"x":0.62,"y":0.35}
            size_hint: 0.15, 0.15


        Spinner:
            id: dropdown
            text: "Select Option"
            values: ["Bitcoin", "Ethereum"]

            on_text: root.spinner_clicked(dropdown.text)
            pos_hint:{"x":0.4,"y":0.2}
            size_hint: 0.2, 0.10
            canvas:
                Color:
                    rgba:(1,1,1,.1)



        RoundedButton:
            pos_hint:{"x":0.3,"y":0.05}
            size_hint: 0.4, 0.1
            text: "Submit Vote"
            on_release:
                root.manager.transition.direction = "right"
                root.submitVote()


<RoundedButton@Button>
    background_color: 0,0,0,0
    background_normal: ''
    canvas:
        Color:
            rgba:(1,1,1,.1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [58]

<NiceText@TextInput>
    background_color: 1,1,1,.05
    on_text: self.foreground_color = (3/255,123/255,143/255,1)##blue


<Popups>
    Label:
        text: "Are you sure you want to cast this vote?\n this action cannot be undone!"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

    RoundedButton:
        text: "Yes"
        # set size of the button
        size_hint: .2, 0.1
        # set position of the button
        pos_hint: {"x":.4, "y":0.1}
        on_release:
            root.main.createTransaction()
