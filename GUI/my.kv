
<WelcomeWindow>:
    name: "welcome"

    canvas.before:
        Color:
            rgba:(24/255,24/255,35/255,1)
        Rectangle:
            pos: self.pos
            size: self.size

    Image:
        source: 'voterchain.png'
        size: self.texture_size
        pos_hint:{"x": 0.3, "top":.95}
        size_hint:0.4, 0.4


    FloatLayout:
        RoundedButton:
            id: voterLogin
            pos_hint:{"x": 0.3, "top":.45}
            size_hint:0.4, 0.1
            text: "Voter Login"
            on_release:
                root.manager.transition.direction = "left"
                root.segueVoterLogin()


        RoundedButton:
            id: createAccnt
            pos_hint:{"x": 0.3, "top":.3}
            size_hint:0.4, 0.1
            text: "Create Account"
            on_release:
                root.manager.transition.direction = "left"
                root.segueCreateAccnt()








<RoundedButton@Button>
    background_color: 0,0,0,0
    background_normal: ''
    canvas:
        Color:
            rgba:(1,1,1,.1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [58]

<NiceText@TextInput>
    background_color: 1,1,1,.05



<CreateVoterAccountWindow>:
    name: "createVoter"

    canvas.before:
        Color:
            rgba:(24/255,24/255,35/255,1)
        Rectangle:
            pos: self.pos
            size: self.size

    namee: namee
    email: email
    password: password

    FloatLayout:

        Image:
            source: 'voterchainWords.png'
            size: self.texture_size
            pos_hint:{"x": 0.3, "top":.95}
            size_hint:0.4, 0.1

        Label:
            id: welcome
            pos_hint:{"x": 0.1, "top":0.85}
            size_hint:0.8, 0.1
            text: "Create Account"


        NiceText:
            id: namee
            hint_text: "Name"
            multiline: False
            pos_hint: {"x": 0.3, "top":0.75}
            size_hint: 0.4, 0.05

        NiceText:
            id: email
            hint_text: "Email"
            multiline: False
            pos_hint: {"x": 0.3 , "top":0.65}
            size_hint: 0.4, 0.05

        NiceText:
            id: password
            hint_text: "Password"
            multiline: False
            password: True
            pos_hint: {"x": 0.3, "top":0.55}
            size_hint: 0.4, 0.05

        RoundedButton:
            pos_hint:{"x":0.3,"y":0.05}
            size_hint: 0.4, 0.1
            text: "Become a Voter"
            on_release:
                root.manager.transition.direction = "up"
                root.submitVoter()




<VoterLoginWindow>:
    name: "voterLogin"

    canvas.before:
        Color:
            rgba:(24/255,24/255,35/255,1)
        Rectangle:
            pos: self.pos
            size: self.size

    email: email
    password: password

    FloatLayout:

        Image:
            source: 'voterchainWords.png'
            size: self.texture_size
            pos_hint:{"x": 0.3, "top":.95}
            size_hint:0.4, 0.1

        Label:
            id: welcome
            pos_hint:{"x": 0.1, "top":0.8}
            size_hint:0.8, 0.1
            text: "Voter Login"


        NiceText:
            id: email
            hint_text: "Email"
            multiline: False
            pos_hint: {"x": 0.3 , "top":0.65}
            size_hint: 0.4, 0.05


        NiceText:
            id: password
            hint_text: "Password"
            multiline: False
            password: True
            pos_hint: {"x": 0.3, "top":0.55}
            size_hint: 0.4, 0.05

        RoundedButton:
            pos_hint:{"x":0.3,"y":0.05}
            size_hint: 0.4, 0.1
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        RoundedButton:
            pos_hint:{"x":0.3,"y":0.2}
            size_hint: 0.4, 0.1
            text: "Don't have an Account? Create One"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()




<MainWindow>:
    name: "main"

    bal: bal
    canvas.before:
        Color:
            rgba:(24/255,24/255,35/255,1)
        Rectangle:
            pos: self.pos
            size: self.size



    FloatLayout:

        Label:
            id: bal
            text: "1"
            font_size: self.height
            pos_hint:{"x":0.375,"y":0.65}
            size_hint: 0.25, 0.25
            color: (112/255,52/255,121/255,1)
            font_name: "Arial"


        Image:
            source: 'vc.png'
            size: self.texture_size
            pos_hint:{"x":0.35,"y":0.5}
            size_hint: 0.3, 0.15
            allow_stretch: True

        RoundedButton:
            pos_hint:{"x":0.3,"y":0.05}
            size_hint: 0.4, 0.1
            text: "Submit Vote"
            on_release:
                root.manager.transition.direction = "right"
                root.submitVote()
